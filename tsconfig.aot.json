{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "typeRoots": [ "./node_modules/@types" ],
        "types": [
            "node"
        ]
    },
    "files": [
      "./tmp/app/app.module.ts",
      "./tmp/app/main.ts"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
      "skipMetadataEmit" : true
    }
}